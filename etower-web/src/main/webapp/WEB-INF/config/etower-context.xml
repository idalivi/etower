<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd"
	default-lazy-init="true ">

	<bean id="tplMessageSource" class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
		<property name="cacheSeconds" value="0"/>
		<property name="basenames">
			<list>
				<value>/WEB-INF/languages/etower_tpl/messages</value>
			</list>
		</property>
	</bean>
	
	<!--后台权限标签-->
	<bean id="sys_perm" class="org.etower.web.PermistionDirective"/>
	
	

</beans>